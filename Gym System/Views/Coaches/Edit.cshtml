@model Gym_System.Models.Coache

@{
	ViewData["Title"] = "Edit";
}
<img src="~/Images/backgroundall.jpg" height="100" width="1992" />
<div class="container ">
	<h1>Edit</h1>

	<h4>Coache</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Edit" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Id" class="control-label"></label>
					<input asp-for="Id" readonly class="form-control" />
					<span asp-validation-for="Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Full_Name" class="control-label"></label>
					<input asp-for="Full_Name" class="form-control" />
					<span asp-validation-for="Full_Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNo" class="control-label"></label>
					<input asp-for="PhoneNo" class="form-control" />
					<span asp-validation-for="PhoneNo" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Salary" class="control-label"></label>
					<input asp-for="Salary" class="form-control" />
					<span asp-validation-for="Salary" class="text-danger"></span>
				</div>
				<input asp-for="ImageUrl" type="hidden" class="form-control" />
				<div class="form-group">
					<label asp-for="File" class="control-label"></label>
					<input asp-for="File" accept="image/*" class="form-control" />
					<span asp-validation-for="File" class="text-danger"></span>
					<img src="~/Images/@Model.ImageUrl" style="width:120px" class="img-thumbnail" />
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-info"><img src="~/Images/back.png" width="28" height="28"> Back to List</a>
				</div>
			</form>
		</div>
	</div>


	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</div>