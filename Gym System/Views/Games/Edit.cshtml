@model Gym_System.Models.Game

@{
	ViewData["Title"] = "Edit";
}
<img src="~/Images/backgroundall.jpg" height="100" width="1992" />
<div class="container ">
	<h2>Edit</h2>

	<h4>Game</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Id" class="control-label"></label>
					<input asp-for="Id" class="form-control" />
					<span asp-validation-for="Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="GameName" class="control-label"></label>
					<input asp-for="GameName" class="form-control" />
					<span asp-validation-for="GameName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CostPreMonth" class="control-label"></label>
					<input asp-for="CostPreMonth" class="form-control" />
					<span asp-validation-for="CostPreMonth" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-info"><img src="~/Images/back.png" width="28" height="28"> Back to List</a>

				</div>
			</form>
		</div>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</div>