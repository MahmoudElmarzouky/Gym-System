@model Gym_System.Models.Game

@{
	ViewData["Title"] = "Create";
}
<img src="~/Images/backgroundall.jpg" height="100" width="1992" />
<div class="container ">
	<h2>Create</h2>

	<h4>Game</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="GameName" class="control-label"></label>
					<input asp-for="GameName" class="form-control" />
					<span asp-validation-for="GameName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CostPreMonth" class="control-label"></label>
					<input asp-for="CostPreMonth" class="form-control" />
					<span asp-validation-for="CostPreMonth" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-info" />
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</div>