@model Gym_System.ViewModels.CocheTraineeViewModel

@{
	ViewData["Title"] = "Create";
}
<img src="~/Images/backgroundall.jpg" height="100" width="1992" />
<div class="container ">
	<h1>Create</h1>

	<h4>Trainee</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create">
				@if (ViewBag.Name != null)
				{
					<h5 class="alert alert-danger">@ViewBag.Name</h5>
				}
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="TraineeName" class="control-label"></label>
					<input asp-for="TraineeName" class="form-control" />
					<span asp-validation-for="TraineeName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNo" class="control-label"></label>
					<input asp-for="PhoneNo" class="form-control" />
					<span asp-validation-for="PhoneNo" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="age" class="control-label"></label>
					<input asp-for="age" class="form-control" />
					<span asp-validation-for="age" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="StartDate" class="control-label"></label>
					<input asp-for="StartDate" class="form-control" />
					<span asp-validation-for="StartDate" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Months" class="control-label"></label>
					<input asp-for="Months" class="form-control" />
					<span asp-validation-for="Months" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="GameID" class="control-label"></label>
					<select asp-for="GameID" class="form-control" asp-items="@(new SelectList(Model.Games,"Id","GameName"))"></select>
					<span asp-validation-for="GameID" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CoacheID" class="control-label"></label>
					<select asp-for="CoacheID" class="form-control" asp-items="@(new SelectList(Model.Coaches,"Id","Full_Name"))"></select>
					<span asp-validation-for="CoacheID" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-info"><img src="~/Images/back.png" width="28" height="28"> Back to List</a>

				</div>
			</form>
		</div>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</div>